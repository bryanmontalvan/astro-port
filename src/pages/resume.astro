---
import MainHead from "../components/MainHead.astro";
import Footer from "../components/Footer.astro";
import Nav from "../components/Nav.astro";
---

<html lang="en">
	<head>
		<MainHead
			title="Resume | Bryan Montalvan"
			description="Bryan Montalvan's Resume"
		/>
		<style>
			iframe {
				width: 100%;
				height: 80vh;
			}
			@media only screen and (max-width: 600px) {
				iframe {
				width: 100%;
				height: 60vh;
			}
			}
		</style>
	</head>
	<body>
		<Nav />
		<div class="wrapper">
			<h1>My Resume</h1>
			<iframe src="/assets/my-resume.pdf"></iframe>
		</div>
		<Footer />
	</body>
</html>
